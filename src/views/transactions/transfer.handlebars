{{!-- Partials para exibir o Saldo o usuario --}}
<div class="auth-container">
    <div class="space">
    {{> balance}} 
</div>

<h2>Transferir</h2>
        <form action="/accounts/transfer" method="post">
        <input type="hidden" name="type" value="transfer">
        <div class="form-control">
            <label for="email">Email:</label>
            <input type="email" name="email" placeholder="Informe o email do destinatario da tranferencia" min="0" step="0.01" required>
        </div>
        <div class="form-control">
            <label for="amount">Amount:</label>
            <input type="number" name="amount" placeholder="Informe o valor de tranferencia" min="0" step="0.01" required>
        </div>
        <input type="submit" value="Transferir">
    </form>